# ================================================================
# Kimi Agent — Environment Configuration
# ================================================================
# Copy this file to .env and fill in your values
#   cp .env.example .env

# ── Application ─────────────────────────────────────────
APP_NAME=AI Trading Agent Pro
APP_VERSION=2.0.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# ── Server ──────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
WEBSOCKET_PORT=8001

# ── Database (TimescaleDB) ──────────────────────────────
POSTGRES_PASSWORD=kimi_dev_pass
DATABASE_URL=sqlite:///./data/trading_agent.db
TIMESCALEDB_URL=postgresql+asyncpg://kimi:kimi_dev_pass@localhost:5432/kimi_agent

# ── Redis ───────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Kafka ───────────────────────────────────────────────
KAFKA_BROKERS=localhost:9092

# ── Binance ─────────────────────────────────────────────
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true

# ── Forex / Stocks (yfinance — 100% FREE) ──────────────
# No API keys needed — yfinance uses Yahoo Finance public data
# Data is ~15 min delayed for forex, real-time for US stocks during market hours

# ── Telegram Bot Notifications ──────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=

# ── AI Providers ────────────────────────────────────────
OPENROUTER_API_KEY=
GEMINI_API_KEY=
GROQ_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ── MLflow ──────────────────────────────────────────────
MLFLOW_TRACKING_URI=http://localhost:5000

# ── JWT Auth ────────────────────────────────────────────
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=
