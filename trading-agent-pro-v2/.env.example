# ==========================================
# AI Trading Agent Pro v2 - Configuration
# ==========================================

# ------------------------------------------
# AI Providers (Get free API keys)
# ------------------------------------------
# OpenRouter: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google Gemini: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Groq: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Anthropic (Claude): https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default AI Provider (openrouter, gemini, groq, anthropic)
DEFAULT_AI_PROVIDER=openrouter

# ------------------------------------------
# Trading APIs
# ------------------------------------------
# Binance: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# Alpha Vantage: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# ------------------------------------------
# Telegram API
# Get from: https://my.telegram.org/apps
# ------------------------------------------
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_PHONE=your_phone_number_here

# Comma-separated list of Telegram channels to monitor
TELEGRAM_CHANNELS=@forexsignals,@cryptoalerts,@tradingview

# ------------------------------------------
# MetaTrader 5
# ------------------------------------------
MT5_ENABLED=false
MT5_ACCOUNT=your_mt5_account_number
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_broker_server

# ------------------------------------------
# RSS Feeds (comma-separated)
# ------------------------------------------
RSS_FEEDS=https://www.forexlive.com/feed,https://feeds.feedburner.com/business/fxstreet

# ------------------------------------------
# Application Settings
# ------------------------------------------
# Monitoring interval in seconds
MONITOR_INTERVAL_SECONDS=60

# Risk management
MAX_RISK_PER_TRADE_PERCENT=2.0
MAX_DAILY_LOSS_PERCENT=5.0
DEFAULT_STOP_LOSS_PIPS=50
DEFAULT_TAKE_PROFIT_PIPS=100

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Browser automation
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30

# Timezone (for Forex Factory calendar)
TIMEZONE=Asia/Kolkata
