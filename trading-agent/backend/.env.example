# ============================================
# AI Trading Agent Pro - Environment Configuration
# ============================================
# Copy this file to .env and fill in your API keys
# All APIs listed have free tiers available

# App Settings
DEBUG=True
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
WEBSOCKET_PORT=8001
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./trading_agent.db
REDIS_URL=redis://localhost:6379/0

# ============================================
# AI PROVIDERS (Configure at least one)
# ============================================

# OpenRouter - Access to multiple models (Claude, GPT-4, etc.)
# Get key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_key_here

# Google Gemini - Free tier available
# Get key at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_key_here

# Groq - Fast inference, free tier available
# Get key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_key_here

# Baseten - Model deployment platform
# Get key at: https://www.baseten.co/
BASETEN_API_KEY=your_baseten_key_here

# Default AI Provider (openrouter, gemini, groq, baseten)
DEFAULT_AI_PROVIDER=openrouter
DEFAULT_AI_MODEL=anthropic/claude-3.5-sonnet

# ============================================
# FINANCIAL DATA APIs
# ============================================

# Binance - Free WebSocket + REST API
# Get key at: https://www.binance.com/en/support/faq/how-to-create-api-keys-360002502072
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true

# Alpha Vantage - Free: 25 calls/day
# Get key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# CryptoCompare - Free: 100k calls/month
# Get key at: https://www.cryptocompare.com/cryptopian/api-keys
CRYPTOCOMPARE_API_KEY=your_cryptocompare_key

# Finnhub - Free: 60 calls/minute
# Get key at: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_key

# ============================================
# SOCIAL MEDIA & MESSAGING APIs
# ============================================

# Reddit API - Free: 60 req/min
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=TradingAgent/2.0

# Telegram API - Free
# Get API ID at: https://my.telegram.org/apps
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_PHONE=your_phone_number

# ============================================
# NEWS & RSS
# ============================================

# NewsAPI - Free: 100 requests/day
# Get key at: https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key

# GNews - Free: 100 requests/day
# Get key at: https://gnews.io/register
GNEWS_API_KEY=your_gnews_key

# Custom RSS Feeds (comma-separated)
RSS_FEEDS=https://www.forexlive.com/feed,https://www.dailyfx.com/feeds/market-news

# ============================================
# METATRADER 5 INTEGRATION
# ============================================

MT5_ENABLED=false
MT5_ACCOUNT=your_mt5_account_number
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_broker_server
MT5_PATH=C:/Program Files/MetaTrader 5/terminal64.exe

# ============================================
# TRADING SETTINGS
# ============================================

MAX_DRAWDOWN_PERCENT=10
DAILY_LOSS_LIMIT_PERCENT=2
PER_TRADE_RISK_PERCENT=1
DEFAULT_RISK_REWARD=2
MIN_CONFIDENCE_THRESHOLD=0.75
CONFLUENCE_FACTORS_REQUIRED=3
CHART_UPDATE_INTERVAL=60

# Browser Automation
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30
